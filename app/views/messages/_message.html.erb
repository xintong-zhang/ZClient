<table class="table">
<div class = "message" data-time="<%= message.created_at.to_i %>">
  <tr>
    <th>
      <ul class="thumbnails">
        <li class="span1">
          <% if message.cartoon == nil %>
            <% c = Cartoon.first(:order =>"RANDOM()") %>
            <%= link_to image_tag(c.url,alt:""),'#' %>
            <% message.cartoon = c %>
            <% message.save %>
          <% else %>
            <% c = message.cartoon %>
            <%= link_to image_tag(c.url,alt:""),'#' %>
          <% end %>
        </li>
      </ul>
    </th>
    <th><%= message.phone_number%></th>
    <div style="text-align: left">
      <th><%= message.content %></th>
    </div>
    <div style="text-align: right">
      <th><%= button_to "Destroy", {:controler=>"messages",:action=>"destroy",:id=>message.id} %></th>
    </div>
  </tr>       
</div>
</table>
